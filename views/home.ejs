
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= conteudoInicial %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.titulo%></h1>
    <p>
      <!--Fazendo um Read more para textos muito grandes, que ao ser clicado manda o User para a route especifica do POST atual-->
    <%=post.conteudo.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post.titulo%>">Ler Mais</a>
    </p>


    <% }) %>


<%- include("partials/footer"); -%>
